<section class="custom-section">
  <div class="container">
    <div class="text-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.paragraph }}</p>
    </div>
    <div class="image-container">
      {% if section.settings.image_1 != blank %}
        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Image 1">
      {% endif %}
      {% if section.settings.image_2 != blank %}
        <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="Image 2">
      {% endif %}
    </div>
  </div>
</section>

<style>
  .custom-section {
    background-color: #0A5F45; /* Adjust the background color if needed */
    padding: 60px 5%;
    display: flex;
    justify-content: center;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    width: 100%;
  }

  .text-content {
    flex: 1;
    color: #fff; /* Adjust text color */
    max-width: 435px;
  }

  .text-content h1 {
    font-family: "Gambarino";
    text-transform: none;
    font-size: 76px;
    margin-bottom: 10px;
    font-family: serif;
    letter-spacing: 0px;
    line-height: 1;
    color: #E6DBC4;
  }

  .text-content p {
    font-family: "EngraversGothicBT-Heavy";
    font-size: 1.5rem;
    line-height: 1.1;
    color: #E6DBC4;
  }

  .image-container {
    display: flex;
    gap: 20px;
    flex: 1;
    justify-content: flex-end;
  }

  .image-container img {
    max-width: 45%;
    height: auto;
    object-fit: cover;
  }

  /* Responsive Design */
    @media (max-width: 768px) {
      .text-content h1 {
        font-size: 5rem;
      }
    .container {
      
      flex-direction: column;
      text-align: left;
      align-items: center;
    }

    .text-content {
      max-width: 100%;
      margin-bottom: 20px;
    }

    .image-container {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .image-container img {
      max-width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why we made this"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "What bra? We designed our classic racerback so you wonâ€™t feel anything but your practice."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    }
  ],
  "presets": [
    {
      "name": "Two Images + Text",
      "category": "Image & Text"
    }
  ]
}
{% endschema %}
