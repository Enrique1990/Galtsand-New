<style>
  .slider {
    position: relative;
    width: 100%;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 100%; /* Start off-screen */
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: all 0.5s ease; /* Smooth transition */
  }

  .slides {
    display: none;
  }

  .slides.displaySlide {
    display: block;
    opacity: 1;
    transition: opacity 0.5s ease;
  }

  h1 {
    font-family: "EngraversGothicBT-Heavy" !important;
    color: #8B1A3A;
  }

  h2 {
    font-family: "EngraversGothicBT-Heavy" !important;
    font-size: 3.4rem;
  }

  .box a {
    font-family: "EngraversGothicBT-Heavy" !important;
    font-size: 1rem;
  }

  .sub_text {
    font-family: "Inter Tight";
    padding-bottom: 3rem;
    font-size: 14px;
    letter-spacing: 1px;
  }

  .text-org h1 {
    text-align: center;
    font-size: 6rem;
    text-transform: none;
    margin-bottom: 0px !important;
  }

  .hero__kicker {
    font-family: "Gambarino-Regular" !important;
    font-weight: 100 !important;
    font-size: 28px !important;
    letter-spacing: 0px !important;
  }

  .text-orgp, span, .grid__swatch__container, .product__grid__title {
    font-family: "EngraversGothicBT-Heavy" !important;
  }

  .product__grid__price span, .grid__swatch__placeholder {
    color: #44505F !important;
  }

  .text-orgp {
    color: #8B1A3A;
    font-size: 1.4rem;
    padding-bottom: 36px;
    font-weight: bold;
    text-align: center;
  }

  .box {
    border: 5px solid;
    padding: 16px;
  }

  .align--bottom-center {
    text-align: left;
  }

  .hero__content__wrapper {
    flex-direction: column;
    justify-content: end;
  }

  .arrows {
    width: 49%;
    display: flex;
    justify-content: space-between;
    margin-top: -5%;
    position: absolute;
    padding-left: 6rem;
    padding-right: 6rem;
  }

  .arrows img {
    cursor: pointer;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .arrows img:hover {
    transform: scale(1.1);
    opacity: 0.9;
  }

  .arrows img:first-child:hover {
    transform: translateX(-10px);
  }

  .arrows img:last-child:hover {
    transform: translateX(10px);
  }

  @media (max-width: 768px) {
    .text-org h1 {
      font-size: 3rem;
    }
  }
</style>
{%- liquid
  assign collection_products = collections[section.settings.collection].products
  assign product_list = section.settings.product_list
  assign products = product_list | default: collection_products
  assign animation_anchor = "[data-section-id='" | append: section.id | append: "']"
-%}

{%- capture sizes -%}
  {%- render 'image-grid-sizes',
    columns_desktop: 2,
    columns_tablet: 2,
    columns_mobile: 1.0,
    section_width: section.settings.width
  %}
{%- endcapture -%}

{%- capture srcset -%}
  {%- render 'image-grid-srcset',
    image: section.settings.image,
    columns_desktop: 2,
    columns_tablet: 2,
    columns_mobile: 1.0,
    section_width: section.settings.width
  %}
{%- endcapture -%}

<div class="collection-split {{ section.settings.bg }}"
  data-section-id="{{ section.id }}"
  data-section-type="collection-row"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="slider {{ section.settings.width }} section-padding text-org">
     <h1>{{ section.settings.header_text }}</h1>
     <p class="text-orgp">{{ section.settings.header_h3text }}</p>
     
    <div class="collection-split__grid">
     <div class="slides">
      <div class="slide collection-split__item {% if section.settings.swap %} collection-split__item--last{% endif %}">
        
        <div class="collection-split__block{% if section.settings.sticky_image_enable %} collection-split__block--sticky{% endif %} {{ section.settings.text_color }}">
          
          {%- if section.settings.link_text == blank and section.settings.link != blank -%}
            <a href="{{ section.settings.link }}" class="link-over-image" aria-label="{{ section.settings.heading | default: section.settings.kicker }}">
          {%- endif -%}

          <div class="hero__content__wrapper align--bottom-center">
            <div class="box">
              {%- if section.settings.kicker != blank -%}
                <p class="hero__kicker"
                  data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-order="1">{{ section.settings.kicker }}</p>
              {%- endif -%}

              {%- if section.settings.heading != blank -%}
                <h2 class="hero__title"
                  data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-order="2">{{ section.settings.heading }}</h2>
              {%- endif -%}
            {%- if section.settings.sub_text != blank -%} 
              <p data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                class="sub_text">{{ section.settings.sub_text }}</p>
              {% endif %}
              {%- if section.settings.link_text != blank and section.settings.link != blank -%}
                <a class="hero__btn {{ section.settings.button_style }} {{ section.settings.button_color }}"
                  href="{{ section.settings.link }}"
                  data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-order="3">
                  {{ section.settings.link_text | escape }}
                </a>
              {%- endif -%}
            </div>
             <div class=" arrows">
               <img class="arrow-left" src="https://cdn.shopify.com/s/files/1/0642/2210/1717/files/Group_9.png?v=1736800174" width="100" height="100"/>
               <img class="arrow-right" src="https://cdn.shopify.com/s/files/1/0642/2210/1717/files/Group_8.png?v=1736800174" width="100" height="100"/>
             </div>
          </div>

          {%- if section.settings.link_text == blank and section.settings.link != blank -%}
            </a>
          {%- endif -%}

          <div class="image-overlay" style="--bg: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | times: 0.01 }};"></div>

          {%- if section.settings.video_bg != nil -%}
            <div class="video-autoplay-wrapper">
              {%- assign video_styles = section.settings.object_position | replace: '-', ' ' | prepend: 'object-position: ' -%}
              {{ section.settings.video_bg | video_tag: autoplay: true, loop: true, muted: true, controls: false, playsinline: true, style: video_styles, data-video-autoplay: '' }}
            </div>
          {%- else -%}
            {% assign alt = section.settings.image.alt | default: 'Collection Image' %}
            {% render 'image-parallax', img_object: section.settings.image, img_object_mobile: section.settings.mobile_image, frame_height_class: 'none' %}
          {% endif %}
        </div>
      </div>
      <div class="slide collection-split__item {% if section.settings.swap %} collection-split__item--last{% endif %}">
      </div>
        <div class="collection-split__block{% if section.settings.sticky_image_enable %} collection-split__block--sticky{% endif %} {{ section.settings.text_color }}">
          
          {%- if section.settings.link_text == blank and section.settings.link != blank -%}
            <a href="{{ section.settings.link }}" class="link-over-image" aria-label="{{ section.settings.heading | default: section.settings.kicker }}">
          {%- endif -%}

          <div class="hero__content__wrapper align--bottom-center">
            <div class="box">
              {%- if section.settings.kicker != blank -%}
                <p class="hero__kicker"
                  data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-order="1">{{ section.settings.kicker }}</p>
              {%- endif -%}

              {%- if section.settings.heading != blank -%}
                <h2 class="hero__title"
                  data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-order="2">{{ section.settings.heading }}</h2>
              {%- endif -%}
            {%- if section.settings.sub_text != blank -%} 
              <p data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                class="sub_text">{{ section.settings.sub_text }}</p>
              {% endif %}
              {%- if section.settings.link_text != blank and section.settings.link != blank -%}
                <a class="hero__btn {{ section.settings.button_style }} {{ section.settings.button_color }}"
                  href="{{ section.settings.link }}"
                  data-aos="hero"
                  data-aos-anchor="{{ animation_anchor }}"
                  data-aos-order="3">
                  {{ section.settings.link_text | escape }}
                </a>
              {%- endif -%}
            </div>
           
          </div>

          {%- if section.settings.link_text == blank and section.settings.link != blank -%}
            </a>
          {%- endif -%}

          <div class="image-overlay" style="--bg: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | times: 0.01 }};"></div>

          {%- if section.settings.video_bg != nil -%}
            <div class="video-autoplay-wrapper">
              {%- assign video_styles = section.settings.object_position | replace: '-', ' ' | prepend: 'object-position: ' -%}
              {{ section.settings.video_bg | video_tag: autoplay: true, loop: true, muted: true, controls: false, playsinline: true, style: video_styles, data-video-autoplay: '' }}
            </div>
          {%- else -%}
            {% assign alt = section.settings.image.alt | default: 'Collection Image' %}
            {% render 'image-parallax', img_object: section.settings.image, img_object_mobile: section.settings.mobile_image, frame_height_class: 'none' %}
          {% endif %}
        </div>
      </div>

      <div class="collection-split__products">
        <div class="float-grid grid--{{ section.settings.grid_large }}"
          data-grid
          data-grid-flex
          data-grid-large
          data-grid-medium
          data-grid-small
          data-custom-scrollbar-items
          style="
            --grid-large-items: {{ section.settings.grid_large }};
            --grid-medium-items: {{ section.settings.grid_large | at_most: 2 }};
            --grid-small-items: {{ section.settings.grid_small }};">
          {%- assign wrap_class = 'collection-split__product grid__item' -%}
          {%- if products != blank -%}
            {%- for _product in products limit: section.settings.limit -%}
              <div class="{{ wrap_class }}" data-item>
                {%- capture placeholder -%}
                  product-{%- cycle '1', '2', '3', '4', '5', '6' -%}
                {%- endcapture -%}
                {% render 'product-grid-item', product: _product, placeholder: placeholder %}
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- render 'onboarding-product-grid-item', limit: section.settings.limit, wrap: wrap_class -%}
          {%- endif -%}
        </div>

        <div class="custom-scrollbar small-down--show" data-custom-scrollbar>
          <div class="custom-scrollbar__track" data-custom-scrollbar-track></div>
        </div>
      </div>
    </div>
     <div class="arrows">
               <img class="prev" onClick="prevSlide" src="https://cdn.shopify.com/s/files/1/0642/2210/1717/files/Group_9.png?v=1736800174" width="100" height="100"/>
               <img class="next" onClick="nextSlide" src="https://cdn.shopify.com/s/files/1/0642/2210/1717/files/Group_8.png?v=1736800174" width="100" height="100"/>
             </div>
  </div>
</div>

