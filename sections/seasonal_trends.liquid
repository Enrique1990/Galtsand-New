{% schema %}
{
  "name": "Seasonal T-Shirt Trends",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Seasonal T-Shirt Trends"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Stay ahead of the curve with the latest t-shirt trends"
    }
  ],
  "blocks": [
    {
      "type": "trend_block",
      "name": "Trend Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Trending Colors"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Explore vibrant hues for summer or earthy tones for fall"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Product, Collection, or Page"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Seasonal T-Shirt Trends",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "trend_block",
          "settings": {
            "heading": "Trending Colors",
            "description": "Explore vibrant hues for summer or earthy tones for fall",
            "link": "/collections/trending-colors"
          }
        },
        {
          "type": "trend_block",
          "settings": {
            "heading": "Seasonal Design Inspirations",
            "description": "Unique prints inspired by nature, art, and pop culture",
            "link": "/collections/seasonal-designs"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .seasonal-tshirt-section {
    background-color: #e6dbc4;
    padding: 40px;
    text-align: left;
  }
  .seasonal-tshirt-section h2 {
    font-family: 'Gambarino-Regular';
    letter-spacing: 1px;
    padding-left: 5%;
    color: #006A50;
    font-size: 62px;
    margin-bottom: 0px;

    {% comment %} font-weight: bold; {% endcomment %}
    text-transform: none;
  }
  .seasonal-tshirt-section p {
    font-family: "EngraversGothicBT-Heavy";
    padding-left: 5%;
    color: #006A50;
    font-size: 14px;
    font-weight: bold;
  }
  .trend-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }
  .trend-box {
    border: 2px solid #165b30;
    /* background-color: white; */
    width: 46%;
    padding: 0;
    text-align: left;
    display: flex;
    flex-direction: column;
    cursor: pointer;
  }
  .trend-box img {
    width: 100%;
    height: 860px; /* Set a fixed height to maintain uniformity */
    object-fit: cover; /* Ensures the image covers the area properly */
    padding: 20px;
  }
  .trend-content {
    padding: 20px;
  }
  .trend-content h3 {
    font-family: 'Gambarino-Regular';
    text-transform: none;
    color: #102345;
    font-size: 30px;
    letter-spacing: 1px;
    {% comment %} font-weight: bold; {% endcomment %}
    margin: 0;
  }
  .trend-content p {
    font-family: "Inter Tight";
    padding-left: 0%;
    color: #102345;
    font-size: 14px;
    margin-top: 5px;
  }
  @media (max-width: 768px) {
    .trend-container {
      flex-direction: column;
      align-items: center;
    }
    .trend-box {
      width: 90%; /* Makes each block full-width on mobile */
    }
    .seasonal-tshirt-section {
        padding: 4px;
        margin-bottom: 20px;
    }
    .trend-box img {
        height: 350px;
    }
  }

  {% comment %} .trend-box:hover {
    transform: scale(0.05);
  } {% endcomment %}
  .trend-box a {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }
  .trend-content {
    padding: 20px;
  }
  .trend-content h3 {
    color: #1E2B50;
    font-size: 20px;
    font-weight: bold;
    margin: 0;
  }
  .trend-content p {
    color: #1E2B50;
    font-size: 14px;
    margin-top: 5px;
  }
</style>

<div class="seasonal-tshirt-section">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtitle }}</p>
  <div class="trend-container">
    {% for block in section.blocks %}
      <div class="trend-box">
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">
        {% endif %}
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.heading }}">
        {% endif %}
        <div class="trend-content">
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
