{% assign animation_anchor = "[data-section-id='" | append: section.id | append: "']" %}
<section class="about-us-header-section {{ section.settings.width }}" data-section-id="{{ section.id }}">
  <div class="about-us-header-section__main aos-init aos-animate">
    <div class="about-us-header-section__text">
      <p class="about-us-header-section__paragraph heading-size-7 mb-r6 text-center">{{ section.settings.paragraph }}</p>
      <h2 class="about-us-header-section__heading headinbg-size-10 mb-r8 text-center">{{ section.settings.heading }}</h2>
    </div>
    <div class="about-us-header-section__images">
      {% if section.settings.image_1 != blank %}
        <img
          src="{{ section.settings.image_1 | img_url: 'master' }}"
          alt="Image 1"
          class="image-1"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="1"
          width="100%"
          height="100%"
        >
      {% endif %}
      {% if section.settings.image_2 != blank %}
        <img
          src="{{ section.settings.image_2 | img_url: 'master' }}"
          alt="Image 2"
          id="Image-2"
          class="image-2"

          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="2"
          width="100%"
          height="100%"
        >
      {% endif %}
      {% if section.settings.image_3 != blank %}
        <img
          src="{{ section.settings.image_3 | img_url: 'master' }}"
          alt="Image 3"
          class="image-3"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="3"
          width="100%"
          height="100%"
        >
      {% endif %}
    </div>
  </div>
</section>

<style>
  p.about-us-header-section__paragraph {
    background: #000000;
    padding: 10px 20px;
    width: max-content;
    color: #ffffff;
    margin-inline: auto;
  }
  .about-us-header-section__images {
    display: grid;
    grid-template-columns: 1fr 1.2fr 1fr;

    grid-gap: 20px;
  }
  @media only screen and (max-width: 768px) {
    .about-us-header-section__images {
      grid-template-columns: 1fr 1fr !important;
    }
    .about-us-header-section__main .image-3 {
      grid-column-start: span 2;
    }
  }
</style>
{% schema %}
{
  "name": "About Us Header",
  "settings": [
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Second Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Third Image"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Section width",
      "default": "wrapper--none",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" }
      ]
    }
  ],
