<script src="{{ 'fslightbox.js' | asset_url }}" defer></script>
<section class="video-with-modal {{ section.settings.width }} use_screen_three_quarters">
  <div class="video-modal-inner">
    <div class="video-modal-overlay">
      <div class="video-modal-content">
        <h1 class="video-modal-title font-heading">{{ section.settings.title }}</h1>
        <a href="{{ section.settings.video.sources[1].url }}" class="standard__cta herp__btn btn btn--white btn--long aos-init aos-animate video-modal-btn" data-fslightbox="gallery">
          {{- section.settings.button_label -}}
        </a>
       
      </div>
    </div>
    <div class="video-modal-grid">
      <div class="video-modal-section-video">
        {% if section.settings.video != blank %}
          {{
            section.settings.video
            | video_tag:
              autoplay: true,
              loop: true,
              muted: true,
              controls: false,
              image_size: '600x',
              poster: section.settings.video.preview_image,
              class: 'video-modal-video  use_screen_three_quarters'
          }}
        {% endif %}
      </div>
      <div class="video-modal-section-image">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            alt="{{ section.settings.image.alt }}"
            width="100%"
            height="100%"
            class="use_screen_three_quarters"
          >
        {% endif %}
      </div>
    </div>
  </div>
</section>
<style>
  .video-modal-inner {
    position: relative;
  }
  .video-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.30) 0%, rgba(0, 0, 0, 0.30) 100%);
    z-index: 10;
  }
  .video-modal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  h1.video-modal-title {
   color: #E6DBC4;
   text-align: center;
   font-size: 76px;
   font-style: normal;
   font-weight: 400;
   line-height: 100%; /* 76px */
   letter-spacing: normal;
   max-width: 660px;
   margin: 0 auto;
   margin-bottom: 32px;
   text-transform: capitalize;
   @media screen and (max-width: 768px) {
    font-size: 40px;
   }
  }
  .video-modal-btn {
    border: 2px solid #E6DBC4;
    color: #eadbc4;
  }
  .video-modal-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }
  .video-modal-section-image {
    display: none;
    @media (min-width: 768px) {
      display: block;
    }
  }
  .video-modal-video {
    width: 100%;
    object-fit: cover;
  }
  .video-modal-btn:hover {
    background: #E6DBC4;
    color: #000;
  }
</style>
{% schema %}
{
  "name": "Video with Modal",
  "settings": [
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Where Heritage Meets Innovation in Athleisure."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Watch Video"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Section Video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video with Modal"
    }
  ]
}
{% endschema %}
