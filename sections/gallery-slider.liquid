<section class="gallery-slider">
  <div class="gallery-slider__container">
    <h2 class="gallery-slider__title heading text-center">{{ section.settings.title }}</h2>
    <p class="gallery-slider__subtitle font-body text-center">{{ section.settings.subtitle }}</p>
    <div class="gallery-slider__pagination-wrapper">
      <div class="swiper-button-prev swiper-button-prev-{{ section.id }}"></div>
      <div class="swiper-button-next swiper-button-next-{{ section.id }}"></div>
    </div>
    <div class="gallery-slider__slider-swiper-wrapper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <img
              src="{{ block.settings.image | img_url: 'master' }}"
              alt="{{ block.settings.image.alt }}"
              width="100%"
              height="100%"
            >
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<style>
   .gallery-slider {
      background: #ffffff;
      padding: 100px 0;
      overflow: hidden; 
   }
   .gallery-slider__title {
      color: #000000;
      text-align: center;
      font-size: 76px;
      font-style: normal;
      font-weight: 400;
      line-height: 100%; /* 76px */
      letter-spacing: -2.28px;
      @media (max-width: 768px) {
        font-size: 40px;
      }
   }
   p.gallery-slider__subtitle.font-body.text-center {
      color: #000000;
      text-align: center;
      font-size: 20px;
      font-style: normal; 
      line-height: 80%;
      max-width: 400px;
      margin: 0 auto;
      @media (max-width: 768px) {
        font-size: 16px;
      }
   }
   .gallery-slider__slider-swiper-wrapper {
      position: relative;
  }
  .gallery-slider__pagination-wrapper {
     display: flex;
     justify-content: center;
     gap: 12px;
     margin-top: 44px;
     margin-bottom: 48px;
  }
  .swiper-button-next-{{ section.id }}, .swiper-button-prev-{{ section.id }} {
     position: relative;
     height: 76px;
     background-position: bottom;
     left: 0 !important;
     right: 0 !important;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const gallerySlider = new Swiper('.gallery-slider__slider-swiper-wrapper', {
      slidesPerView: 1.3,
      spaceBetween: 10,
      freeMode: true,
      breakpoints: {
        1024: {
          slidesPerView: 4,
        },
        768: {
          slidesPerView: 2,
        },
        480: {
          slidesPerView: 1.3,
        },
      },
      navigation: {
        nextEl: '.swiper-button-next-{{ section.id }}',
        prevEl: '.swiper-button-prev-{{ section.id }}',
      },
    });
  });
</script>

{% schema %}
{
  "name": "Gallery Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Section width",
      "default": "wrapper--none",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image_slide",
      "name": "Image Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Slider",
      "settings": {
        "title": "Adventure-Inspired Lookbook"
      }
    }
  ]
}
{% endschema %}
