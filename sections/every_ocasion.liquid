{% schema %}
{
  "name": "For Every Occasion",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "T-Shirts for Every Occasion"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Our collection is versatile enough to cater to every aspect of your lifestyle"
    }
  ],
  "blocks": [
    {
      "type": "casual_wear",
      "name": "Casual Everyday Wear",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Casual Everyday Wear"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Soft and breathable t-shirts perfect for lounging or running errands"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Product"
        }
      ]
    },
    {
      "type": "workout_wear",
      "name": "Workout and Athleisure",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Workout and Athleisure"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Moisture-wicking fabrics that keep you cool during intense activities"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Product"
        }
      ]
    },
    {
      "type": "smart_casual",
      "name": "Smart-Casual Events",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Smart-Casual Events"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Pair with blazers for a polished yet relaxed look"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "For Every Occasion",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "casual_wear"
        },
        {
          "type": "workout_wear"
        },
        {
          "type": "smart_casual"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .occasion-section {
    background-color: #ffffff;
    padding: 50px;
    text-align: center;
  }
  .occasion-section h2 {
    /* font-family: 'EngraversGothic'; */
    text-align: left;
    color: #000000;
    font-size: 7.5em;
    /* font-weight: bold; */
    text-transform: none;
    margin-bottom: 0;
  }
  .occasion-section p {
    /* font-family: 'EngraversGothic'; */
    text-align: left;
    color: #000000;
    font-size: 1.4em;
    margin-bottom: 70px;
  }

  /* Desktop Layout */
  .occasion-container {
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin-top: 30px;
  }

  .occasion-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }

  .occasion-box img {
    width: 33%;
    height: auto;
    object-fit: cover;
  }

  .occasion-content {
    width: 67%;
    text-align: left;
  }
  .occasion-content:nth-child(1){
    text-align: right;
  }
  .occasion-content p:nth-child(1){
    text-align: right;
  }

  .occasion-content h3 {
    font-family: 'Gambarino';
    color: #000000;
    font-size: 76px;
    {% comment %} font-weight: bold;
      {% endcomment %}
       margin-bottom: 0px;
  }

  .occasion-content p {
    font-family: 'Inter Tight';
    color: #000000;
    font-size: 16px;
  }

  .occasion-box a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  /* Mobile View: Stacks All Content in One Column */
  /* Mobile View: Stacks Content, Adjusts Font Size and Spacing */
  @media (max-width: 768px) {
    .occasion-section {

      padding: 20px;
    }

    .occasion-section h2 {
      line-height: 0.8;
      font-size: 48px;
      text-align: left;
      margin-bottom: 10px;
    }

    .occasion-section p {
      font-size: 18px;
      text-align: left;
      margin-bottom: 40px;
      line-height: 1.2;
    }

    .occasion-box {
      flex-direction: column;
      text-align: left;
      gap: 20px;
    }

    .occasion-box img {
      width: 100%;
      height: auto;
    }

    .occasion-content {
      width: 100%;
      text-align: left;
    }

    .occasion-content h3 {
      font-size: 42px;
      line-height: 1.3;
    }

    .occasion-content p {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .occasion-content a {
      display: inline-block;
      margin-top: 10px;
      font-size: 16px;
    }

    /* Adjust only the second block */
    .occasion-box:nth-child(2) {
      display: flex;
      flex-direction: column-reverse;
    }
  }
</style>

<div class="occasion-section">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtitle }}</p>
  <div class="occasion-container">
    <!-- Casual Everyday Wear (Image Left, Text Right) -->
    <div class="occasion-box">
      {% if section.blocks[0].settings.image != blank %}
        <img
          src="{{ section.blocks[0].settings.image | img_url: 'master' }}"
          alt="{{ section.blocks[0].settings.heading }}"
        >
      {% endif %}
      <div class="occasion-content">
        <h3>{{ section.blocks[0].settings.heading }}</h3>
        <p>{{ section.blocks[0].settings.description }}</p>
        {% if section.blocks[0].settings.link != blank %}
          <a href="{{ section.blocks[0].settings.link }}">Learn More</a>
        {% endif %}
      </div>
    </div>

    <!-- Workout and Athleisure (Text Left, Image Right) -->
    <div class="occasion-box">
      <div class="occasion-content">
        <h3>{{ section.blocks[1].settings.heading }}</h3>
        <p>{{ section.blocks[1].settings.description }}</p>
        {% if section.blocks[1].settings.link != blank %}
          <a href="{{ section.blocks[1].settings.link }}">Learn More</a>
        {% endif %}
      </div>
      {% if section.blocks[1].settings.image != blank %}
        <img
          src="{{ section.blocks[1].settings.image | img_url: 'master' }}"
          alt="{{ section.blocks[1].settings.heading }}"
        >
      {% endif %}
    </div>

    <!-- Smart-Casual Events (Image Left, Text Right) -->
    <div class="occasion-box">
      {% if section.blocks[2].settings.image != blank %}
        <img
          src="{{ section.blocks[2].settings.image | img_url: 'master' }}"
          alt="{{ section.blocks[2].settings.heading }}"
        >
      {% endif %}
      <div class="occasion-content">
        <h3>{{ section.blocks[2].settings.heading }}</h3>
        <p>{{ section.blocks[2].settings.description }}</p>
        {% if section.blocks[2].settings.link != blank %}
          <a href="{{ section.blocks[2].settings.link }}">Learn More</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
