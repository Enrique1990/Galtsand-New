{% schema %}
{
  "name": "For Every Occasion",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "T-Shirts for Every Occasion"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Our collection is versatile enough to cater to every aspect of your lifestyle"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper", "label": "Wrapper" },
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    },
  ],
  "blocks": [
    {
      "type": "casual_wear",
      "name": "Casual Everyday Wear",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Casual Everyday Wear"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Soft and breathable t-shirts perfect for lounging or running errands"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Product"
        }
      ]
    },
    {
      "type": "workout_wear",
      "name": "Workout and Athleisure",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Workout and Athleisure"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Moisture-wicking fabrics that keep you cool during intense activities"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Product"
        }
      ]
    },
    {
      "type": "smart_casual",
      "name": "Smart-Casual Events",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Smart-Casual Events"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Pair with blazers for a polished yet relaxed look"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "For Every Occasion",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "casual_wear"
        },
        {
          "type": "workout_wear"
        },
        {
          "type": "smart_casual"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .occasion-section p:nth-child(2) {
    text-align: left;
  }

  /* Desktop Layout */
  .occasion-container {
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin-top: 30px;
  }

  .occasion-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }

  .occasion-box img {
    width: 33%;
    height: auto;
    object-fit: cover;
  }

  .occasion-content {
    width: 67%;
    text-align: left;
  }
  /* .occasion-content:nth-child(1){
    text-align: right;
  } */
  .occasion-content p:nth-child(1) {
    text-align: right !important;
  }

  .occasion-box a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  /* Mobile View: Stacks All Content in One Column */
  /* Mobile View: Stacks Content, Adjusts Font Size and Spacing */
  @media (max-width: 768px) {
    .occasion-section {
      padding: 20px;
    }

    .occasion-box {
      flex-direction: column;
      text-align: left;
      gap: 20px;
    }

    .occasion-box img {
      width: 100%;
      height: auto;
    }
    .occasion-content {
      width: 100%;
      text-align: left;
    }

    .occasion-content h3 {
      font-size: 42px;
      line-height: 1.3;
    }

    .occasion-content p {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .occasion-content a {
      display: inline-block;
      margin-top: 10px;
      font-size: 16px;
    }

    .occasion-box:nth-child(2) {
      display: flex;
      flex-direction: column-reverse;
    }
  }
</style>

<div class="occasion-section {{ section.settings.width }}">
  <h2 class="heading-size-10 mb-r2 text-left">{{ section.settings.title }}</h2>
  <p class="body-size-5 mb-r8">{{ section.settings.subtitle }}</p>
  <div class="occasion-container">
    <!-- Casual Everyday Wear (Image Left, Text Right) -->
    <div class="occasion-box">
      {% if section.blocks[0].settings.image != blank %}
        <img
          src="{{ section.blocks[0].settings.image | img_url: 'master' }}"
          alt="{{ section.blocks[0].settings.heading }}"
          width="100%"
          height="100%"
        >
      {% endif %}
      <div class="occasion-content">
        <h3 class="heading-size-10 mb-r2">{{ section.blocks[0].settings.heading }}</h3>
        <p class="body-size-5 mb-r8">{{ section.blocks[0].settings.description }}</p>
        {% if section.blocks[0].settings.link != blank %}
          <a href="{{ section.blocks[0].settings.link }}">Learn More</a>
        {% endif %}
      </div>
    </div>

    <!-- Workout and Athleisure (Text Left, Image Right) -->
    <div class="occasion-box">
      <div class="occasion-content">
        <h3 class="heading-size-10 mb-r2">{{ section.blocks[1].settings.heading }}</h3>
        <p class="body-size-5 mb-r8">{{ section.blocks[1].settings.description }}</p>
        {% if section.blocks[1].settings.link != blank %}
          <a href="{{ section.blocks[1].settings.link }}">Learn More</a>
        {% endif %}
      </div>
      {% if section.blocks[1].settings.image != blank %}
        <img
          src="{{ section.blocks[1].settings.image | img_url: 'master' }}"
          alt="{{ section.blocks[1].settings.heading }}"
          width="100%"
          height="100%"
        >
      {% endif %}
    </div>

    <!-- Smart-Casual Events (Image Left, Text Right) -->
    <div class="occasion-box">
      {% if section.blocks[2].settings.image != blank %}
        <img
          src="{{ section.blocks[2].settings.image | img_url: 'master' }}"
          alt="{{ section.blocks[2].settings.heading }}"
          width="100%"
          height="100%"
          s
        >
      {% endif %}
      <div class="occasion-content">
        <h3 class="heading-size-10 mb-r2">{{ section.blocks[2].settings.heading }}</h3>
        <p class="body-size-5 mb-r8">{{ section.blocks[2].settings.description }}</p>
        {% if section.blocks[2].settings.link != blank %}
          <a href="{{ section.blocks[2].settings.link }}">Learn More</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
