<style>
  .eco-conscious-section {
    text-align: center;
    display: flex; /* Ensure section is visible */
    flex-direction: column;
  }

  .icon {
    display: inline-block;
    vertical-align: middle;
    width: auto;
    height: 90px;
  }

  .eco-conscious-section .container {
    margin: 0 auto;
  }

  .eco-conscious-section h2 {
    font-family: 'Gambarino';
    font-size: 2.5em;
    margin-bottom: 20px;
  }

  .eco-conscious-section p {
    font-family: 'Inter Tight';
    font-size: 1.2em;
    color: #102345;
    margin-bottom: 40px;
  }

  .eco-features {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
    width: 100%;
    padding-block-end: var(--gutter);
  }

  /* Responsive Styling */
  @media (max-width: 768px) {
    .eco-features {
      flex-direction: column; /* Switch to column layout */
      align-items: center;
    }

    .eco-feature {
      width: 100%; /* Full width on mobile */
    }
  }

  .eco-feature {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: left;
    border: 2px solid #000000;
  }

  .eco-feature img {
    max-width: 69px;
  }

  .eco-feature p {
    font-size: 1em;
    /* color: #555; */
    flex-grow: 1;
    margin-bottom: 20px;
  }

  .learn-more {
    color: #000;
    text-decoration: none;
    font-weight: bold;
    margin-top: auto;
  }
</style>

<section class="eco-conscious-section">
  <div class="{{ section.settings.width }}">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <!-- Desktop View (Grid of Features) -->
    <div class="eco-features">
      {% for block in section.blocks %}
        <div class="eco-feature" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="icon">
              <img src="{{ block.settings.icon | img_url: '120x' }}" 
                   alt="{{ block.settings.title }}"
                   width="360"
                   height="360">
            </div>
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="learn-more">Learn More</a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Eco-Conscious Section",
  "settings": [
    {
      "type": "text", 
      "id": "heading",
      "label": "Heading",
      "default": "Designed With An Eco-Conscious Mindset"
    },
    {
      "type": "text",
      "id": "subheading", 
      "label": "Subheading",
      "default": "At Fabletics, our unwavering commitment to the environment drives us to innovate continuously..."
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Learn More Link"
        }
      ]
    },
  ],
  "presets": [
    {
      "name": "Eco-Conscious Section",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature" 
        }
      ]
    }
  ]
}
{% endschema %}
